<%- include ("header") %>

    <body>
        <!-- Overlay, must be placed direct after the opening body tag. -->
        <div class="bs-canvas-overlay bs-canvas-anim bg-dark position-fixed w-100 h-100"></div>

        <!-- Pushable content along with off-canvas opener. -->
        <div class="bs-offset-main bs-canvas-anim bg-light" style="color: #8f1338;">
            <button class="btn btn-info" type="button" data-toggle="canvas" data-target="#bs-canvas-left"
                aria-expanded="false" aria-controls="bs-canvas-left" style="background-color: #8f1338;">&#9776;</button>
            Display search tab
        </div>

        <!-- Off-canvas sidebar markup, left -->
        <div id="bs-canvas-left" class="bs-canvas bs-canvas-anim bs-canvas-left position-fixed h-100"
            style="background-color: #8f1338;">
            <header class="bs-canvas-header p-3 bg-light">
                <h4 class="d-inline-block mb-0" style="color: #8f1338;">Search tab</h4>
                <button type="button" class="bs-canvas-close close" aria-label="Close"><span aria-hidden="true"
                        style="color: #8f1338;">&times;</span></button>
            </header>
            <div class="bs-canvas-content px-3 py-5">
                <form role="form">
                    <div class="form-group">
                        <input type="lieu_depart" name="lieu_depart" id="lieu_depart" required
                            class="form-control form-control-sm" placeholder="Départ...">
                    </div>
                    <div class="form-group">
                        <input type="lieu_arrivee" name="lieu_arrivee" id="lieu_arrivee"
                            class="form-control form-control-sm" placeholder="Arrivée...">
                    </div>
                    <!-- <div class="shadow p-2 mb-2 bg-light"> -->
                    <input class="btn btn-light btn-lg btn-block" style="color: #8f1338;" type="submit" value="Search">
                    <!-- </div> -->
                </form>
                <div>
                    <hr style="height:1px;border:none;color:#333;background-color:#333;" />
                </div>

                <!-- For loop a mettre la  -->
                <% for (var data in records) {%>

                    <script>
                        // console.log()
                        var origine = '<%= records[data].fields.origine %>'
                        var destination = '<%= records[data].fields.destination %>'
                        var prix1 = '<%= records[data].fields.plein_tarif_1ere %>'
                        var prix2 = '<%= records[data].fields.plein_tarif_2nde%> '
                        // var record = '<%= records %>'
                    </script>

                    <div class="shadow p-3 mb-5 bg-white">
                        <div class="card-block" id="<%= data %>" onclick="item_selected(origine, destination, prix1, prix2, this.id)">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        Départ : <%= records[data].fields.origine %>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        Destination : <%= records[data].fields.destination %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-8 col-sm-8 col-md-8">
                                    <div class="form-group">
                                        Date : 01-04-2021
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group centered">
                                        tarif 1 : <%= records[data].fields.plein_tarif_1ere %> $
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        tarif 2 : <%= records[data].fields.plein_tarif_2nde%> $
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%}%>

            </div>
        </div>


        <div id="map">
            <!-- Ici s'affichera la carte -->
        </div>



        <!-- Fichiers Javascript -->
        <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin=""></script>

        <script src="/views/script/search.js"> </script>
    </body>


    <%- include ("footer") %>